@model EventTracker.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>

<ul class="events voffset4">
    @foreach (var anEvent in Model.UpcomingEvents)
    {
        <li>
            <div class="date">
                <div class="month">
                    @anEvent.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @anEvent.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="host">
                    @anEvent.Host.Name
                    @if (Model.ShowActions)
                    {
                        <button class="btn btn-link btn-sm js-toggle-follow" data-user-id="@anEvent.HostId">Follow</button>
                    }
                </span>
                <span class="category">
                    @anEvent.Category.Name
                </span>
                @if (Model.ShowActions)
                {
                    <button data-event-id="@anEvent.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going ?</button>
                }
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(function() {
            $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", { "": button.attr("data-event-id")})
                        .done(function() {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        })
                        .fail(function() {
                            alert("Something failed!");
                        });
                });
        });

        $(function () {
            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { "": button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
        });
    </script>
}